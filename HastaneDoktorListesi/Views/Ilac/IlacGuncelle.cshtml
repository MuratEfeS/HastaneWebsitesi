@model HastaneBilgiListeleri.Models.Ilac

<div class="hospital-container">
    <div class="hospital-card shadow">
        <div class="hospital-card-header">
            <i class="medical-icon">📝</i>
            <h3>İlaç Bilgilerini Düzenle</h3>
        </div>

        <form method="post" asp-action="IlacGuncelle" class="hospital-form p-4">
            <input type="hidden" asp-for="IlacID" />

            <div class="mb-4">
                <label asp-for="IlacAd" class="form-label fw-bold">İlaç Adı</label>
                <input asp-for="IlacAd" class="form-control" required />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn-save-main flex-grow-1">Güncellemeyi Kaydet</button>
                <a asp-action="IlacListesi" class="btn-cancel flex-grow-1 text-center">Vazgeç</a>
            </div>
        </form>
    </div>
</div>