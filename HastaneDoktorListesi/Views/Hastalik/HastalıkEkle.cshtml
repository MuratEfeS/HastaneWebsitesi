@model HastaneBilgiListeleri.ViewModels.HastalikEkle_VM

<div class="hospital-container">
    <div class="hospital-card shadow">
        <div class="hospital-card-header">
            <h3><i class="fas fa-microscope"></i> Teşhis ve Tedavi Tanımla</h3>
        </div>

        <form method="post" asp-action="HastalıkEkle" class="hospital-form p-4">
            <div class="mb-3">
                <label class="form-label fw-bold">Hastalık Adı</label>
                <input asp-for="HastalikAd" class="form-control" placeholder="Hastalık adını giriniz..." required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Bu Hastalıkta Kullanılacak Temel İlaç</label>
                <select asp-for="IlacID" asp-items="Model.IlacListesi" class="form-select" required>
                    <option value="" disabled selected>İlaç Seçiniz...</option>
                </select>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn-save-main flex-grow-1">Hastalığı Kaydet</button>
                <a asp-action="HastalıkListesi" class="btn btn-cancel flex-grow-1 text-center">Vazgeç</a>
            </div>
        </form>
    </div>
</div>