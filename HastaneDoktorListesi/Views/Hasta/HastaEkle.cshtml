@using HastaneDoktorListesi.ViewModels
@model HastaEkle_VM

@{
    ViewData["Title"] = "Yeni Hasta Kaydı";
}

<div class="hospital-container">
    <div class="hospital-card shadow">
        <div class="hospital-card-header">
            <i class="medical-icon">✚</i>
            <h3>Yeni Hasta Kayıt Paneli</h3>
            <p>Sisteme yeni hasta girişi yapmak için bilgileri doldurunuz.</p>
        </div>

        <form method="post" asp-action="HastaEkle" enctype="multipart/form-data" class="hospital-form p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="HastaAd" class="form-label fw-bold">Hastanın Adı ve Soyadı</label>
                <input asp-for="HastaAd" class="form-control" placeholder="Örn: Ahmet Yılmaz" required />
                <span asp-validation-for="HastaAd" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DoktorID" class="form-label fw-bold">Atanacak Doktor</label>
                    <select asp-for="DoktorID" asp-items="Model.DoktorListesi" class="form-select" required>
                        <option value="" disabled selected>-- Doktor Seçiniz --</option>
                    </select>
                    <span asp-validation-for="DoktorID" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Teşhis / Hastalık</label>
                    <select asp-for="HastalıkID" asp-items="Model.HastalikListesi" class="form-select" required>
                        <option value="" disabled selected>-- Hastalık Seçiniz --</option>
                    </select>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="HastaProfilResmi" class="form-label fw-bold">Hasta Profil Fotoğrafı</label>
                <input type="file" asp-for="HastaProfilResmi" class="form-control" accept="image/*" />
                <small class="text-muted">Desteklenen formatlar: JPG, PNG (Maks. 2MB)</small>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn-save-main flex-grow-1">
                    <i class="fas fa-save"></i> Hastayı Sisteme Kaydet
                </button>
                <a asp-action="HastaListesi" class="btn-cancel flex-grow-1 text-center">
                    Vazgeç ve Listeye Dön
                </a>
            </div>
        </form>
    </div>
</div>